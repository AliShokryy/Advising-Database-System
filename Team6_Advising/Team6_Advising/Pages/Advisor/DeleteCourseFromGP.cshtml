<h1>Delete Course from a Graduation Plan</h1>

<form method="post" class="bg-blue">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Student ID</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="stdID" value"" required>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Semester Code</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="semCode" value"" required>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Course ID</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="crsID" value"" required>
        </div>
    </div>
    <div class="row mb-3 justify-content-center">
        <div class="col-sm-6">
            <button type="submit" class="btn btn-primary btn-lg"> Submit </button>
        </div>
    </div>
</form>

@if (ViewData["Message"] != null && ViewData["Message"].ToString().Equals("Course deleted Successfully"))
{
    <div class="bg-blue">
        <label class="col-sm-3 col-form-label">Course deleted Successfully</label>
    </div>
}
@if (ViewData["Message"] != null && ViewData["Message"].ToString().Equals("Course not deleted"))
{
    <div class="bg-blue">
        <label class="col-sm-3 col-form-label">Course not deleted</label>
    </div>
}
