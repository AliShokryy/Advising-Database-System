@page
@model Team6_Advising.Pages.Students.OpCoursesModel
@{
}

<h1>Optional Courses</h1>
<form method="post">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Current Semester Code</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="semcode" value"">
        </div>

        <button type="submit" class="btn btn-primary btn-sm">View Optional Courses</button>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Course Name</th>
            <th>Course ID</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.courses)
        {
            <tr>
                <td>@item.name</td>
                <td>@item.id</td>
            </tr>
        }
    </tbody>
</table>
