</header>

@if (ViewData["message"] != null)
{
    <div class="bg-blue2" style="display:flex; justify-content:center">
        <lablel class="col-form-label">@ViewData["Message"]</lablel>
    </div>
}
<h1 class="head">Login</h1>

<form method="post" class="bg-blue">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Student ID</label> 
        <div class="col-sm-6">
                <input type="text" class="form-control" name="id" placeholder="Enter Your Name" >
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Password</label>
        <div class="col-sm-6">
            <input type="password" class="form-control" name="password" placeholder="Enter Your Password">
        </div>
    </div>
    <div class="row mb-3 justify-content-center">
        <div class="col-sm-6">
            <button type="submit" class="btn btn-primary btn-lg"> Submit </button>
        </div>
    </div>
</form>