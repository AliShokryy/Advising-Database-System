@page
@model Team6_Advising.Pages.Admin.NewMakeupExamModel
@{
    Layout = "./Shared/_LayoutAdmin";
}

<h1> Add makeup exam for a certain course </h1>

<form method="post" class="bg-blue">
    <div class="row mb-3">
        <label for="dropdown" class="col-sm-3 col-form-label">Exam Type</label>
        <div class="col-sm-6">
            <select class="form-select" id="dropdown" name="Type" required>
                <option value="option1">First Makeup</option>
                <option value="option2">Second Makeup</option>
            </select>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Date and Time</label>
        <div class="col-sm-6">
            <input type="datetime-local" class="form-control" name="date" value"" required>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Course ID</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="courseID" value"" required>
        </div>
    </div>
    <div class="row mb-3 justify-content-center">
        <div class="col-sm-6">
            <button type="submit" class="btn btn-primary btn-lg"> Create </button>
        </div>
    </div>
</form>