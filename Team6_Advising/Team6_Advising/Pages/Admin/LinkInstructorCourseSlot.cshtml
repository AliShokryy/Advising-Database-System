@page
@model Team6_Advising.Pages.Admin.LinkInstructorCourseSlotModel
@{
    Layout = "./Shared/_LayoutAdmin";
}

<h1>Assign Instructor to Course to Slot</h1>

<form method="post" class="bg-blue">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Instructor ID</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="instructor_id" value"" required>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Course ID</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="cours_id" value"" required>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Slot ID</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="slot_id" value"" required>
        </div>
    </div>
    <div class="row mb-3 justify-content-center">
        <div class="col-sm-6">
            <button type="submit" class="btn btn-primary btn-lg"> Link </button>
        </div>
    </div>
</form>